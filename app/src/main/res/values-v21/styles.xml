<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ImageZoomTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/AppTheme.ActionBar.Transparent</item>
        <item name="android:windowBackground">@color/palette_darkest</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/palette_darkest</item>
        <item name="android:navigationBarColor">@color/palette_darkest</item>
    </style>
</resources>
