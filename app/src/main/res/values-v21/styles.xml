<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/palette_primary</item>
        <item name="colorPrimaryDark">@color/palette_primary_dark</item>
        <item name="android:windowBackground">@color/palette_background</item>
        <item name="android:navigationBarColor">@color/palette_primary_dark</item>
    </style>

    <style name="ImageZoomTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/AppTheme.ActionBar.Transparent</item>
        <item name="android:windowBackground">@color/palette_darkest</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/palette_darkest</item>
        <item name="android:navigationBarColor">@color/palette_darkest</item>
    </style>

</resources>
